---
import Time from "../components/Time.astro";

const { frontmatter } = Astro.props;
---

<section class="section has-background-info-light">
  <div class="container">
    <div class="content">
      <div class="columns is-vcentered is-gapless">
        <div class="column is-5 is-12-mobile">
          <figure class="image is-4by3">
            <img
              src={frontmatter.thumbnail}
              style="object-fit: scale-down;max-height:300px"
              alt="logo"
            />
          </figure>
        </div>
        <div class="column is-7 has-text-centered-mobile mt-4">
          <h4 class="subtitle is-size-3 has-text-weight-bold">
            {frontmatter.title}
          </h4>
        </div>
      </div>
      <div class="is-size-5-tablet is-size-6-mobile">
        <Time date={frontmatter.date} />
        <slot />
      </div>
    </div>
  </div>
</section>
