---
import Layout from "../../layouts/Layout.astro";

export const getStaticPaths = async () => {
  const allPosts = await Astro.glob("../../content/programming/**/*.md");

  return allPosts.map((post) => {
    const { path, title, thumbnail, alt } = post.frontmatter;
    const { Content } = post;
    return {
      params: { path },
      props: { Content, title, thumbnail, alt },
    };
  });
};
const { title, Content, thumbnail, alt } = Astro.props;
---

<Layout theme="is-dark" logo="/logo_white.png" title={title}>
  <article class="section">
    <h1 class="title is-5-mobile">{title}</h1>
    <figure class="image is-3by1">
      <img src={thumbnail} style="object-fit:scale-down" alt={alt} />
    </figure>
    <div class="container"><Content /></div>
  </article>
</Layout>
